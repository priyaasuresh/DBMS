                        </td>
                        <td>
                            <%= arr[i].price %>
                        </td>
                        <td>
                            <%= arr[i].store_id %>
                        </td>
                    </tr>
                <% } %>
                

            </table>
            <br>
            <h3>Amount : <%= amount %></h3>

            <table>
            <tr>
                <% for(key in itemarray[0]){ %>
                    <th>
                        <%= key %>
                    </th>
                    <%} %>
            </tr>
            <% for(var i=0; i< itemarray.length; i++){ %>
                <% js=itemarray[i]; %>
                    <tr>
            
            
                        <% for(key in js){ %>
