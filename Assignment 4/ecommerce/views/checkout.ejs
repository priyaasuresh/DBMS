    <div class="container">
        <div class="row">
            <div class="col">
                
            <h3>
                Name :<%= customer_name %>
            </h3>

            <table>
                <tr>
                    <th>
                        CUSTOMER ID
                    </th>
                    <th>
                        ITEM ID
                    </th>
                    <th>
                        ITEM NAME
                    </th>
                    <th>
                        QUNATITY
                    </th>
                    <th>
                        PRICE
                    </th>
                    <th>
                        STORE ID
                    </th>
                </tr>
                
            
                <% for(var i =0; i < arr.length; i++){ %>
                    <tr>
                        <td>
