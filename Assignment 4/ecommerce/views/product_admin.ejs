    <h2>ECOMMERCE WEBSITE</h2>
    <br><br>

    <div class="container">
        <div class="row">
            <div class="col">
                <table>
                    <th>PRODUCT ID</th>
                    <th>DESCRIPTION</th>
                    <th>PRICE</th>
                    <th>BRAND</th>
                    <th>ADMIN ID</th>

                    <% for(var i=0; i < arr.length;i++ ){ %>
                        <tr>
                            <td>
                                <%= arr[i].product_id %>
                            </td>
                            <td>
                                <%= arr[i].description %>
                            </td>
                            <td>
                                <%= arr[i].product_cost %>
                            </td>
                            <td>
                                <%= arr[i].brand %>
                            </td>
                            <td>
                                <%= arr[i].admin_id %>
                            </td>
                        </tr>
                        <% } %>
                </table>

            </div>

            <div class="col">

                <form method="post">
                
                    <h3>ADD PRODUCT</h3>
                    

                    <label for="description" class="form-label">DESCRIPTION</label>
                    <textarea name="description" id="" cols="30" rows="2" class="form-control" autocomplete="off" required="required"></textarea>
                    <br>

                    <label for="product_cost" class="form-label">PRICE</label>
                    <input type="text" name="product_cost" id="" class="form-control" autocomplete="off" required="required">
                    <br>
                
                    <label for="brand" class="form-label">BRAND</label>
                    <input type="text" name="brand" id="" class="form-control" autocomplete="off"> 
                    <br>
                
                    <label for="admin_id" class="form-label">ADMIN ID</label>
                    <input type="text" name="admin_id" id="" class="form-control" autocomplete="off" required="required">
                    <br>
            
                    <br>
                    <button type="submit">ADD PRODUCT</button>
                </form>
            </div>

        </div>

    </div>
   
    
