    <h2>ECOMMERCE WEBSITE</h2>
    <h4>DETAILS</h4>


    <div class="container">
        <div class="row">
            <div class="col">

            <table>
                <tr>
                    <th>
                        CUSTOMER ID
                    </th>
                    <th>
                        NAME
                    </th>
                    <th>
                        EMAIL
                    </th>
                    <th>
                        CONTACT
                    </th>
                </tr>
                
            
                <% for(var i =0; i < arr.length; i++){ %>
                    <tr>
                        <td>
                            <%= arr[i].customer_id %>
                        </td>
                        <td>
                            <%= arr[i].name %>
                        </td>
                        <td>
                            <%= arr[i].email %>
                        </td>
                        <td>
                            <%= arr[i].contact %>
                        </td>
                    </tr>
                <% } %>
                
                </table>
            </div>

            <div class="col">
               

                <form method="post">
                    
                    <h3>CUSTOMER DETAILS</h3>

                    <label for="customer_id" class="form-label">CUSTOMER ID</label>
                    <input type="text" name="customer_id" id="" class="form-control" autocomplete="off" required="required">
                    <br>

                    <label for="name" class="form-label">NAME</label>
                    <input type="text" name="name" id="" class="form-control" autocomplete="off" required="required">
                    <br>

                    <label for="email" class="form-label">EMAIL</label>
                    <input type="text" name="email" id="" class="form-control" autocomplete="off" required="required">
                    <br>

                    <label for="contact" class="form-label">CONTACT</label>
                    <input type="text" name="contact" id="" class="form-control" autocomplete="off" required="required">
                    <br>
                    <br>
                    <button type="submit" name="add" value="add">UPDATE REFUND AMOUNT</button>
                </form>
            </div>
        </div>
    </div>

    <br><br>
</body>

</html>